<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".aula24.ex01.PrimeiraActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="600px"/>

    <TextView
        android:id="@+id/act_primeira_tv_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jônatas Araujo"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/act_primeira_tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="jonatas@digitalhouse.com"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"/>
    <Button
        android:id="@+id/act_primeira_bt_confirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmação"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>